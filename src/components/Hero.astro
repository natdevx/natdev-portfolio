---
import ArrowNarrowRight from "../components/icons/ArrowNarrowRight.astro";
import ExternalLink from "../components/icons/ExternalLink.astro";
import GithubIcon from "../components/icons/Github.astro";
import LinkedinIcon from "../components/icons/Linkedin.astro";
import MailIcon from "../components/icons/Mail.astro";

const redes = [
  { nombre: "GitHub", icono: GithubIcon, link: "https://github.com/natdevx" },
  { nombre: "LinkedIn", icono: LinkedinIcon, link: "https://www.linkedin.com/in/natdevx/" },
  { nombre: "Correo", icono: MailIcon, link: "mailto:natdev.contacto@gmail.com" },
];
---

<section class="relative min-h-screen flex items-center">
  <div class="max-w-7xl mx-auto w-full px-6 md:px-12 lg:px-16 grid md:grid-cols-2 gap-16 py-20">

    <!-- Texto -->
    <div class="flex flex-col justify-center space-y-6 text-center md:text-left">
      <h1 class="text-5xl md:text-7xl font-extrabold leading-tight">
        Hola soy <br/>
        <span
          class="bg-gradient-to-r from-[var(--color-primary)] via-[var(--color-secondary)] to-[var(--color-accent)]
          bg-clip-text text-transparent">
          Nat Arrazola
        </span>
      </h1>

      <p class="text-[var(--color-text)] max-w-xl mx-auto md:mx-0 text-lg font-light">
        <span class="text-[var(--color-primary)]">Ingeniera en Sistemas Computacionales</span> 
        especializada en <span class="text-[var(--color-primary)]">desarrollo Full-Stack.</span>
        Apasionada por crear aplicaciones eficientes, escalables y con un dise√±o atractivo.
      </p>

      <!-- Botones -->
      <div class="flex flex-wrap justify-center md:justify-start gap-4 pt-4">
        <a
          href="#proyectos"
          class="flex items-center gap-2 px-6 py-3 rounded-xl font-semibold text-white
          dark:text-[#000309] bg-[var(--color-primary)] hover:bg-[var(--color-secondary)] transition">
          Ver proyectos
          <ArrowNarrowRight class="w-5 h-5" />
        </a>

        <a
          href="/cv.pdf"
          target="_blank"
          class="flex items-center gap-2 px-6 py-3 rounded-xl font-semibold border border-[var(--color-border)]
          text-[var(--color-text)] hover:bg-[var(--color-surface)] transition">
          Ver CV
          <ExternalLink class="w-5 h-5" />
        </a>
      </div>

      <!-- Redes -->
      <div class="flex justify-center md:justify-start gap-5 pt-2">
        {redes.map((r) => {
          const Icono = r.icono;
          return (
            <a
              href={r.link}
              target="_blank"
              rel="noopener noreferrer"
              class="p-3 rounded-full bg-[var(--color-surface)] dark:bg-[var(--color-bg)] shadow-md
                     hover:bg-[var(--color-secondary)] hover:text-white transition-all duration-300"
              aria-label={r.nombre}>
              <Icono class="w-8 h-8" />
            </a>
          );
        })}
      </div>
    </div>

    <!-- Imagen -->
    <div class="flex justify-center items-center">
      <div
        class="relative w-64 h-64 md:w-80 md:h-80 rounded-full p-[6px] shadow-xl"
        style="background: linear-gradient(135deg, var(--color-primary), var(--color-accent));">
        <img
          src="/me.webp"
          alt="Foto de Nat"
          class="rounded-full w-full h-full object-cover bg-[var(--color-surface)]"
        />
      </div>
    </div>

  </div>
</section>
